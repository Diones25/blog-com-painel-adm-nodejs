<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>
  
<body>
    <div class="container">
        <div class="row">
            <% result.articles.rows.forEach(article => { %>
            <div class="col-lg-4">
                <div class="card mb-3 mt-4">
                    <div class="card-header">
                        <h2><%= article.title %></h2>
                    </div>
                    <div class="card-body">
                        <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <div class="row my-4">          
            <div class="col-12 col-lg-12 d-flex justify-content-between">
                <% if(result.page > 2){ %>
                <a href="/articles/page/<%= result.page - 1 %>"><<< Prev</a>
                <% } else if(result.page == 2){ %>
                <a href="/"><<< Prev</a>
                <% } %>

                <% if(result.next){ %>
                    <a href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>
            </div>
        </div>
    </div>
</body>

